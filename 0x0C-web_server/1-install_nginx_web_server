#!/usr/bin/env bash
# install web-server(nginix) in a sever

sudo apt-get update
sudo apt-get install -y ngnix
sudo ufw allow 'Nginx HTTP'

# Configure Nginx to listen on port 80
sudo sed -i 's/\blisten 80\b/listen 80 default_server/g' /etc/nginx/sites-available/default

# Write a simple "Hello World!" page to the default HTML directory
sudo su
echo "Hello World!" > /var/www/html/index.nginx-debian.html